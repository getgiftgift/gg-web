%h1 Enter Birthday
= link_to 'Sign Out', destroy_user_session_path, method: :delete
= current_user.email
= current_user.birthdate

.cell#customer_birthday
  .floater
  .container 
    .left
      = image_tag "birthday_deals/birthday-logo.png"
    .right
      .form
        = semantic_form_for(current_user, url: add_birthday_to_user_url, :validate => false, :html => {:class => 'user-form'}) do |f|
          = f.inputs name: 'Add your birthday to your account to join the club!' do
            %li.dob
              = text_field_tag "user_birthdate[birthdate(2i)]", nil, placeholder: 'MM', size: 2, maxlength: 2, class: 'month'
              = text_field_tag "user_birthdate[birthdate(3i)]", nil, placeholder: 'DD', size: 2, maxlength: 2, class: 'day'
              = text_field_tag "user_birthdate[birthdate(1i)]", nil, placeholder: 'YYYY', size: 2, maxlength: 4, class: 'year'
          = f.actions do
            = f.action :submit, :as => :button, :label => 'Submit',  :button_html => { :class => 'form-button orange', :value => 'Submit'}
  %h2.bottom_tag
    You can access your presents 2 weeks before your birthday!