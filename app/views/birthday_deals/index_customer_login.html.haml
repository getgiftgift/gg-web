- if current_user 
  = link_to current_user.email, destroy_user_session_path, method: :delete 
.cell#customer_signin
  .floater
  .container 
    .left
      = image_tag "birthday_deals/birthday-logo.png"
    .right 
      .form
        = render partial: 'devise/sessions/new' 
      %h2.bottom_tag
        Don't have an account? 
        = link_to 'Sign Up', '#customer_signup'   

.cell#video
  .floater
  .white-box
    %iframe{ :frameborder => "0", :height => "360", :src => "https://www.youtube-nocookie.com/embed/lj0mOvFTzT8?allowfullscreen=1&rel=0&showinfo=0&modestbranding=1", :width => "640"}
    = link_to 'Sign In', '#customer_signin'
    = link_to 'Sign Up', '#customer_signup' 
  
.cell#customer_signup
  .floater
  .container
    .left
      = image_tag "birthday_deals/birthday-logo.png"
    .right
      .form
        = render partial: 'devise/registrations/new' 
      %h2.bottom_tag    
      Already have an account?
      = link_to 'Sign In', '#customer_signin'