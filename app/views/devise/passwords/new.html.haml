.cell#customer_signin
  .floater
  .container 
    .left
      = image_tag "birthday_deals/birthday-logo.png"
    .right 
      .form 
        Forgot your password?
        = semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'user-form'}) do |f|
          = devise_error_messages!
          = f.inputs do
            = f.input :email, label: false, placeholder: 'E-Mail:'
          = f.actions do
            = f.action :submit, label: false, button_html: {class: 'big form-button orange', value: 'Send Instructions'}

      %h2.bottom_tag
        = link_to 'Sign In', new_user_session_path

        = link_to 'Sign Up', new_user_registration_path