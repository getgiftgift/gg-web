.cell#customer_signin
  .floater
  .container.form.center 
    %h2 Change your password
    = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      = f.inputs do
        = f.input :reset_password_token, as: :hidden
        = f.input :password, label: false, placeholder: 'New Password'
        = f.input :password_confirmation, label: false, placeholder: 'Confirm New Password'
      =  f.actions do
        = f.action :submit, button_html: {class: 'big form-button orange', value: 'Change Password'}  
    %h2.bottom_tag    
      = link_to 'Sign In', new_user_session_path
      &nbsp;
      = link_to 'Sign up', new_user_registration_path
      - 2.times do
        %br
      = link_to 'Didn\'t receive confirmation instructions?', new_confirmation_path(resource_name)   