.cell#customer_signin
  .floater
  .container.form.center 
    %h2 Resend Confirmation Instructions
    = semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      = f.inputs do
        = f.input :email, label: false, placeholder: 'Email'
      = f.actions do
        = f.action :submit, button_html: { class: 'big form-button orange', value: 'Resend Confirm'}  
    %h2.bottom_tag    
      = link_to 'Sign In', new_user_session_path
      &nbsp;
      = link_to 'Sign up', new_user_registration_path
               
